<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_main_ivHeaderLogo"
        android:src="@drawable/hazina_logo_transparent"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:contentDescription="Hazina Logo Header" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/activity_main_llMainMenu"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="50dp">

        <Button
            android:text="ORDERS"
            android:textSize="32dp"
            android:onClick="orderActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="INVOICES"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="REPORTS"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="SETTINGS"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:text="Developed by Jaspa Systems (Pty) Ltd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

</RelativeLayout>